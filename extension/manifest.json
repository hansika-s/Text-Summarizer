{
    "name": "Summarizer",
    "version": "1.0",
    "description": "A summarization tool!",
    "manifest_version": 2,
    "icons": {
        "16": "src/icons/icon16.png",
        "48": "src/icons/icon48.png",
        "128": "src/icons/icon128.png"
    },
    "background": {
        "scripts": [
            "src/js/background.js"
        ],
        "persistent": true
    },
    // "options_ui": {
    //     "page": "src/html/options.html",
    //     "open_in_tab": true
    // },
    "browser_action": {
        "default_popup": "src/html/popup.html",
        "default_title": "TL;DR"
    },
    "permissions": [
        "<all_urls>",
        "tabs"
    ]
}